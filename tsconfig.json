{
	"compilerOptions": {
		"target": "es2024",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"outDir": "./dist",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"]
		},
		"skipLibCheck": true
	},
	"include": ["src/**/*", "@types"],
	"exclude": ["node_modules"]
}
